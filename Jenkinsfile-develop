pipeline {
    agent any
    
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'develop',url: 'https://github.com/RincyIssac/Risun_Myinsuranceapp.git'
	        }
        }        
        stage('Unit/Integration tests') {
            steps {
                echo 'Unit/Integration...'
                bat'c:/Users/Administrator/AppData/Local/Programs/Python/Python39/python.exe'  -m unittest discover -s tests\unit\unittest_users_dao.py -v
            }
        }        
        stage('Acceptance tests') {
            steps {
                echo 'Acceptance...'
                bat'c:/Users/Administrator/AppData/Local/Programs/Python/Python39/python.exe'  -m unittest discover -s tests\acceptance\acceptance_api.py -v
            }
        }        
    }
    post {
        always {
            echo 'post do this always...'
        }
        success{
            echo 'post do this when success...'
        }
        failure {
            echo 'post do this when failure...'
        }
        cleanup{
            echo 'post do this when cleanup...'
            deleteDir()
        }
    }
}